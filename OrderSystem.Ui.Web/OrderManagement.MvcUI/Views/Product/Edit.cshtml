@model ProductEditViewModel
@{
    ViewData["Title"] = "ویرایش محصول";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-box-open me-2"></i>ثبت محصول جدید
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id"/>
                        <input type="hidden" asp-for="ImageUrl"/>

                        <!-- فیلدهای مشابه Create.cshtml -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" placeholder=" " required/>
                                    <label asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                    <div class="invalid-feedback">
                                        لطفاً نام کالا را وارد کنید
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Category" class="form-control" placeholder=" " required/>
                                    <label asp-for="Category"></label>
                                    <span asp-validation-for="Category" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control" placeholder=" " style="height: 100px"></textarea>
                                <label asp-for="Description"></label>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Price" type="number" class="form-control" placeholder=" " required/>
                                    <label asp-for="Price"></label>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                 </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="StockQuantity" type="number" class="form-control" placeholder=" "
                                           required/>
                                    <label asp-for="StockQuantity"></label>
                                    <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <label>تصویر فعلی</label>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div>
                                        <img src="@Model.ImageUrl" class="img-thumbnail" width="200"/>
                                        <a href="@Model.ImageUrl" target="_blank" class="btn btn-sm btn-info mt-2">نمایش
                                            بزرگتر</a>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">تصویری وجود ندارد</p>
                                }
                            </div>

                            <div class="form-group">
                                <label asp-for="Image">تصویر جدید (اختیاری)</label>
                                <input asp-for="Image" type="file" class="form-control"/>
                                <small class="form-text text-muted">فقط در صورت نیاز به تغییر تصویر، فایل جدید انتخاب
                                    کنید</small>
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary me-md-2 px-4">
                                <i class="fas fa-save me-2"></i>ذخیره محصول
                            </button>
                            <a href="@Url.Action("GetAll")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>انصراف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            overflow: hidden;
            border: none;
        }

        .form-floating {
            position: relative;
        }

        .form-floating > label {
            right: auto;
            left: 0;
            padding: 1rem 0.75rem;
        }

        .file-upload-wrapper {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s;
        }

        .file-upload-wrapper:hover {
            border-color: #0d6efd;
        }

        .file-upload-input::-webkit-file-upload-button {
            visibility: hidden;
        }

        .file-upload-input::before {
            content: 'انتخاب تصویر';
            display: inline-block;
            background: #0d6efd;
            color: white;
            padding: 8px 16px;
            outline: none;
            white-space: nowrap;
            cursor: pointer;
            border-radius: 5px;
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    <script>
        // نمایش پیش‌نمایش تصویر
        function previewImage(input) {
            const preview = document.querySelector('.file-upload-preview');
            const img = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    img.src = e.target.result;
                    preview.classList.remove('d-none');
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        // حذف تصویر انتخابی
        function clearImage() {
            const input = document.querySelector('.file-upload-input');
            const preview = document.querySelector('.file-upload-preview');

            input.value = '';
            preview.classList.add('d-none');
        }

        // اعتبارسنجی فرم
        (function () {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
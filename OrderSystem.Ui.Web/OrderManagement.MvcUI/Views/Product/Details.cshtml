@model OrderManagement.MvcUI.Dtos.ProductDto
@{
    ViewData["Title"] = "جزئیات محصول";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
        </div>
        <div class="col-md-7">
            <h3>@Model.Name</h3>
            <p class="text-muted">دسته‌بندی: @Model.Category</p>
            <p>@Model.Description</p>
            <p class="text-success fw-bold">موجودی: @Model.StockQuantity عدد</p>

            <form asp-action="AddToCart" asp-controller="Store" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group mb-3">
                    <label>تعداد مورد نظر</label>
                    <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary w-100">افزودن به سبد خرید</button>
            </form>
        </div>
    </div>
</div>
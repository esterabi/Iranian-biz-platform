@model List<OrderManagement.MvcUI.Dtos.AdminOrderDto>
@{
    ViewData["Title"] = "گزارش سفارش‌ها";
}

<h2 class="text-center mt-4">گزارش سفارش‌ها</h2>

<table class="table table-bordered mt-4">
    <thead class="table-dark text-center">
    <tr>
        <th>نام کالا</th>
        <th>نام مشتری</th>
        <th>تاریخ</th>
        <th>تعداد اقلام</th>
        <th>قیمت خرید</th>
        <th>قیمت پایه</th>
        <th>وضعیت</th>
        <th>توضیحات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.ProductName</td>
            <td>@order.CustomerName</td>
            <td>@order.CreatedAt.ToString("yyyy/MM/dd")</td>
            <td>@order.Quantity</td>
            <td>@order.Price</td>
            <td>@order.Fee</td>
            <td>@order.Status</td>
            <td>@order.Description</td>
        </tr>
    }
    </tbody>
</table>